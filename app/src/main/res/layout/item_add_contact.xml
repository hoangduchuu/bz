<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_contact_item"
    style="@style/ListItemContainer"

    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contact_item_profile"
        android:layout_width="@dimen/user_profile_icon_width"
        android:layout_height="@dimen/user_profile_icon_height"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_marginRight="@dimen/default_padding"
        android:src="@drawable/ic_avatar_gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/contact_item_name"
            style="@style/AppTextAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textStyle="bold"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/contact_item_detail"
            style="@style/AppTextAppearance.Small.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            tools:text="This is the comment text.." />

    </LinearLayout>

    <ImageView
        android:id="@+id/contact_send_message"
        style="@style/list_item_btn"
        android:src="@drawable/ic_message_border" />

    <ToggleButton
        android:id="@+id/contact_add_friend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="@dimen/default_padding"
        android:layout_marginStart="@dimen/default_padding"
        android:background="@drawable/toggle_add_friend"
        android:checked="false"
        android:text=""
        android:textOff=""
        android:textOn="" />

</LinearLayout>
