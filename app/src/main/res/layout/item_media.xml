<?xml version="1.0" encoding="utf-8"?>
<com.ping.android.presentation.view.custom.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/image"
        style="?attr/backgroundTheme"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_chat_camera" />
</com.ping.android.presentation.view.custom.SquareLayout>