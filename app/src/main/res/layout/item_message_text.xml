<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message_item"

    style="@style/ListItemContainer">

    <RadioButton
        android:id="@+id/message_item_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_padding"
        android:background="@null" />

    <ImageView
        android:id="@+id/message_item_profile"
        android:layout_width="@dimen/user_profile_icon_width"
        android:layout_height="@dimen/user_profile_icon_height"
        android:layout_marginLeft="@dimen/default_padding"
        android:src="@drawable/ic_avatar_gray" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/message_item_profile"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/message_item_sender"
                    style="@style/AppTextAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/message_item_time"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:textStyle="bold"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/message_item_time"
                    style="@style/AppTextAppearance.Small.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/default_padding"
                    android:layout_marginRight="@dimen/default_padding"
                    tools:text="01-06-2017-06:54" />
            </RelativeLayout>

            <TextView
                android:id="@+id/message_item_message"
                style="@style/AppTextAppearance.Small.Grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/default_padding"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="This is the comment text" />

        </LinearLayout>

        <View
            style="@style/horizontal_divider"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>
