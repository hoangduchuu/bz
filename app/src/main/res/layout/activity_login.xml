<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ping.android.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_back"
                style="@style/BackButton" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_logo" />

            <LinearLayout
                style="@style/InputLayoutStyle"
                android:layout_marginTop="100dp">

                <EditText
                    android:id="@+id/login_name"
                    style="@style/InputTextStyle"
                    android:drawableLeft="@drawable/ic_email"
                    android:hint="Email or Username" />

                <View style="@style/InputUnderLineStyle" />

                <EditText
                    android:id="@+id/login_password"
                    style="@style/InputTextStyle"
                    android:drawableLeft="@drawable/ic_password"
                    android:hint="Password"
                    android:inputType="textPassword" />

                <View style="@style/InputUnderLineStyle" />

                <RelativeLayout
                    android:id="@+id/login_next"
                    style="@style/NextButtonLayout"
                    android:layout_marginTop="25dp">

                    <TextView
                        style="@style/NextButtonText"
                        android:text="NEXT" />

                    <ImageView
                        style="@style/NextButtonImage"
                        android:src="@drawable/ic_arrow_right" />
                </RelativeLayout>

                <Button
                    android:id="@+id/login_forget_password"
                    style="@style/TransparentButton"
                    android:text="@string/forgot_password" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/notify_network_other" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressStyle" />
</android.support.design.widget.CoordinatorLayout>
