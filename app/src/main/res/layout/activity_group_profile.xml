<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="com.ping.android.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_gray"
        android:orientation="vertical">

        <RelativeLayout style="@style/TopMenu">

            <ImageView
                android:id="@+id/group_profile_back"
                style="@style/BackButton" />

            <TextView
                style="@style/TextTitle"
                android:text="DETAILS" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                style="@style/MatchParent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/MatchWidth"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/ItemSetting"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="horizontal"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true" >

                        <ImageView
                            android:id="@+id/group_profile_image"
                            android:layout_width="@dimen/user_profile_icon_width"
                            android:layout_height="@dimen/user_profile_icon_width"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/ic_avatar_gray" />

                        <LinearLayout
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:layout_width="0px"
                            android:layout_height="0px"/>


                        <EditText
                            android:lines="1"
                            android:id="@+id/group_profile_name"
                            style="@style/MatchParent"
                            android:ellipsize="end"
                            android:layout_marginRight="10dp"
                            android:background="@null"
                            android:maxLines="1"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse egestas, risus a placerat fermentum, massa nisl luctus lorem, eget vehicula orci velit sed lectus. Maecenas in scelerisque sem. Curabitur tincidunt auctor lectus, eget congue ex faucibus at. Sed suscipit dictum ligula bibendum semper. Mauris ipsum mauris, mattis a tellus sed, cursus viverra mauris. In mollis facilisis feugiat. Mauris semper tempus lectus nec tempus. Curabitur interdum leo eu elementum convallis. Sed non est pharetra, tincidunt neque a, vulputate tellus. Mauris cursus nisl in efficitur fringilla. Donec et lobortis eros. Nullam nibh ante, lobortis et purus eu, facilisis ultrices augue. Nam eu vehicula arcu, eget egestas dolor. Aliquam risus ex, blandit eu ligula vel, mollis egestas felis."
                            android:nextFocusUp="@id/group_profile_name"
                            android:nextFocusLeft="@id/group_profile_name"/>
                    </LinearLayout>

                    <View style="@style/ItemViewSeparate" />

                    <LinearLayout
                        style="@style/MatchWidth"
                        android:orientation="vertical"
                        android:background="@color/white">
                        <LinearLayout style="@style/ItemSetting">

                            <ImageView
                                style="@style/ItemSettingIconLeft"
                                android:src="@drawable/ic_notifications" />

                            <TextView
                                style="@style/ItemSettingText"
                                android:text="Notifications" />

                            <Switch
                                android:id="@+id/group_profile_notification"
                                style="@style/ItemSettingIconRight.Toggle" />
                        </LinearLayout>

                        <View style="@style/ItemSettingSeparate" />

                        <LinearLayout
                            android:id="@+id/profile_block"
                            style="@style/ItemSetting">

                            <ImageView
                                style="@style/ItemSettingIconLeft"
                                android:src="@drawable/profile_nickname" />

                            <TextView
                                style="@style/ItemSettingText"
                                android:textColor="@color/color_grey"
                                android:text="Nickname" />

                            <ImageView style="@style/ItemSettingIconRight" />
                        </LinearLayout>

                        <View style="@style/ItemSettingSeparate" />

                        <LinearLayout style="@style/ItemSetting">

                            <ImageView
                                style="@style/ItemSettingIconLeft"
                                android:src="@drawable/profile_mask" />

                            <TextView
                                style="@style/ItemSettingText"
                                android:text="Mask Incoming Messages" />

                            <Switch
                                android:id="@+id/group_profile_mask"
                                style="@style/ItemSettingIconRight.Toggle" />

                        </LinearLayout>

                        <View style="@style/ItemSettingSeparate" />

                        <LinearLayout style="@style/ItemSetting">

                            <ImageView
                                style="@style/ItemSettingIconLeft"
                                android:src="@drawable/profile_puzzle" />

                            <TextView
                                style="@style/ItemSettingText"
                                android:text="Puzzle Incoming Pictures" />

                            <Switch
                                android:id="@+id/group_profile_puzzle"
                                style="@style/ItemSettingIconRight.Toggle" />
                        </LinearLayout>
                    </LinearLayout>

                    <View style="@style/ItemViewSeparate" />

                    <LinearLayout
                        style="@style/ItemSetting"
                        android:id="@+id/group_profile_add_member">
                        <TextView
                            style="@style/ItemSettingText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="ADD NEW"
                            android:textColor="@color/orange"/>
                    </LinearLayout>

                    <View style="@style/ItemViewSeparate" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/group_profile_list_member"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"/>

                    <View style="@style/ItemViewSeparate" />

                    <LinearLayout
                        style="@style/ItemSetting"
                        android:id="@+id/group_profile_leave_group" >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="LEAVE GROUP"
                            android:textColor="@color/orange"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <View style="@style/ViewSeparate" />

    </LinearLayout>

    <include layout="@layout/notify_network_other" />
</android.support.design.widget.CoordinatorLayout>
