<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ping.android.presentation.view.activity.ChatActivity">

    <LinearLayout
        android:id="@+id/contentRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_background_white"
        android:orientation="vertical">

        <RelativeLayout
            style="?attr/backgroundTheme"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#F1F2F2"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/chat_back"
                style="@style/BackButton" />

            <TextView
                android:id="@+id/chat_new_message_count"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="-10dp"
                android:layout_toEndOf="@+id/chat_back"
                android:background="@drawable/background_msg_count"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="10"
                android:textColor="@color/orange_dark"
                android:textSize="10sp" />

            <LinearLayout
                android:id="@+id/chat_header_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_person_name"
                    style="@style/AppTextAppearance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxWidth="200dp"
                    android:paddingStart="10dp"
                    android:text="User "
                    tools:text="ipsum dolor sit amet, consectetur adipiscing elit." />

                <TextView
                    android:id="@+id/chat_person_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online"
                    android:textSize="@dimen/text_size_xxsmall" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/chat_video_call"
                style="@style/ActionButton.TopMenu"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingEnd="@dimen/default_padding"
                android:paddingStart="0dp"
                android:src="@drawable/ic_video_outline"
                android:tint="@color/white" />

            <ImageButton
                android:id="@+id/chat_voice_call"
                style="@style/ActionButton.TopMenu"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/chat_video_call"
                android:paddingEnd="@dimen/default_padding"
                android:paddingStart="0dp"
                android:src="@drawable/ic_call_outline"
                android:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chat_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:animateLayoutChanges="true">

            <ImageView
                android:id="@+id/backgroundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:background="@drawable/background1" />

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swiperefresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.ping.android.presentation.view.custom.revealable.RevealableViewRecyclerView
                    android:id="@+id/chat_list_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    tools:listitem="@layout/item_chat_right_msg"/>

            </android.support.v4.widget.SwipeRefreshLayout>
        </RelativeLayout>

        <include layout="@layout/view_chat_bottom" />

        <com.ping.android.presentation.view.custom.VoiceRecordView
            android:id="@+id/chat_layout_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <include layout="@layout/notify_network_main" />
</android.support.design.widget.CoordinatorLayout>