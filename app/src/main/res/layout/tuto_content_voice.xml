<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAlignment="center"
    android:layout_below="@+id/_msg"
    android:layout_marginTop="50dp"
    android:background="@drawable/rounded_tutorial_container"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/with_tutorial_typing_container"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_tutorial_element_content"
        android:orientation="vertical"
        android:paddingRight="@dimen/padding_content"
        android:textAlignment="center">

        <ImageView
            android:layout_marginRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_chat_record_black_grey" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/space_tutorial_element_content"
            android:src="@drawable/tuto_hand2" />

        <com.ping.android.presentation.view.customView.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="@dimen/space_tutorial_element_content"
            android:text="@string/hold_voice"
            android:textAlignment="center"
            app:fontName="Semibold" />

    </LinearLayout>


</RelativeLayout>