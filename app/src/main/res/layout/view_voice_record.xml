<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:background="@color/av_color_bg">

    <com.cleveroad.audiovisualization.GLAudioVisualizationView
        android:id="@+id/visualizer_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:av_backgroundColor="#ff2d55"
        app:av_bubblesPerLayer="16"
        app:av_bubblesRandomizeSizes="true"
        app:av_bubblesSize="50dp"
        app:av_layersCount="1"
        app:av_wavesCount="7"
        app:av_wavesFooterHeight="200dp"
        app:av_wavesHeight="60dp"
        tools:visibility="gone" />

    <FrameLayout
        android:id="@+id/recordView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/btnRecord"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:textColor="@color/orange"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="00:10" />

            <ImageView
                android:id="@+id/btnCancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:alpha="0"
                android:background="@drawable/background_circle_border"
                android:padding="10dp"
                android:src="@drawable/ic_clear"
                android:tint="@color/main_background_gray"
                tools:alpha="0.8" />

            <ImageView
                android:id="@+id/btnTransform"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:alpha="0"
                android:background="@drawable/background_circle_border"
                android:padding="10dp"
                android:src="@drawable/ic_transform"
                android:tint="@color/main_background_gray"
                tools:alpha="0.8" />

            <ImageButton
                android:id="@+id/btnRecord"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/background_record_voice"
                android:src="@drawable/ic_chat_voice_selected" />

            <RelativeLayout
                android:id="@+id/tutorial_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/btnRecord"
                android:layout_centerHorizontal="true"
                android:translationY="20dp"
                tools:visibility="gone">

                <LinearLayout
                    android:id="@+id/txt_tutorial_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rectangle"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/voice_record_instruction_tap_to_record" />
                </LinearLayout>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_below="@+id/txt_tutorial_message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="13dp"
                    android:rotation="180"
                    android:src="@drawable/triangle" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reviewView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/av_color_bg"
            android:visibility="gone"
            tools:visibility="visible">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listVoiceType"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/sample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/loadingTransformation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnCancelTransform"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/background_circle_gray"
                    android:padding="11dp"
                    android:src="@drawable/ic_clear"
                    android:tint="@color/orange" />

                <ImageView
                    android:id="@+id/btnSend"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/background_circle_gray"
                    android:padding="11dp"
                    android:src="@drawable/ic_arrow_up"
                    android:tint="@color/orange" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>