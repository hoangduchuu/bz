<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.ping.android.activity.RegistrationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/forgot_pass_back"
                style="@style/BackButton" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/img_logo" />


            <LinearLayout
                style="@style/InputLayoutStyle"
                android:layout_marginTop="100dp">

                <EditText
                    android:id="@+id/forgot_pass_email"
                    style="@style/InputTextStyle"
                    android:hint="Email Address" />

                <View style="@style/InputUnderLineStyle" />

                <EditText
                    android:id="@+id/forgot_pass_first_name"
                    style="@style/InputTextStyle"
                    android:hint="First Name" />

                <View style="@style/InputUnderLineStyle" />

                <EditText
                    android:id="@+id/forgot_pass_last_name"
                    style="@style/InputTextStyle"
                    android:hint="Last Name" />

                <View style="@style/InputUnderLineStyle" />

                <EditText
                    android:id="@+id/forgot_pass_phone_4n"
                    style="@style/InputTextStyle"
                    android:hint="Last 4 number" />

                <View style="@style/InputUnderLineStyle" />

                <RelativeLayout
                    android:id="@+id/forgot_pass_reset"
                    style="@style/NextButtonLayout"
                    android:layout_marginTop="15dp">

                    <TextView
                        style="@style/NextButtonText"
                        android:text="RESET PASSWORD" />

                    <ImageView
                        style="@style/NextButtonImage"
                        android:src="@drawable/ic_arrow_right" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/notify_network_other" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressStyle" />
</android.support.design.widget.CoordinatorLayout>
