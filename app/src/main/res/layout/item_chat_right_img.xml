<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ItemChat"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/item_chat_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@null" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_chat_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user"
                android:layout_gravity="right"
                style="@style/AppTextAppearance.VerySmall.Grey"/>

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/item_chat_image"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_loading_image"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                app:sriv_left_bottom_corner_radius="@dimen/chat_bg_corner_radius"
                app:sriv_left_top_corner_radius="@dimen/chat_bg_corner_radius"
                app:sriv_right_bottom_corner_radius="@dimen/chat_bg_corner_radius"
                app:sriv_right_top_corner_radius="@dimen/chat_bg_corner_radius" />

            <TextView
                android:id="@+id/item_chat_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-2dp"
                android:gravity="right"
                android:padding="5dp"
                android:text="Sent"
                style="@style/AppTextAppearance.VerySmall.Grey"
                android:textSize="@dimen/text_size_xxsmall" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>