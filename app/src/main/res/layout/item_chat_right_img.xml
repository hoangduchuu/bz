<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ItemChat"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/item_chat_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@null" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/item_chat_image"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_loading_image"
                    app:sriv_left_bottom_corner_radius="@dimen/chat_bg_corner_radius"
                    app:sriv_left_top_corner_radius="@dimen/chat_bg_corner_radius"
                    app:sriv_right_bottom_corner_radius="@dimen/chat_bg_corner_radius"
                    app:sriv_right_top_corner_radius="@dimen/chat_bg_corner_radius" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/revealable_view"
            style="@style/AppTextAppearance.VerySmall.Grey"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:translationX="80dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_chat_status"
        style="@style/AppTextAppearance.VerySmall.Grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_marginTop="-2dp"
        android:gravity="right"
        android:padding="5dp"
        android:text="Sent"
        android:textSize="@dimen/text_size_xxsmall" />
</RelativeLayout>