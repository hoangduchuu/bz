<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    style="@style/ItemChat"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/item_chat_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@null"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/item_chat_image"
        app:layout_constraintStart_toStartOf="parent" />

    <com.joooonho.SelectableRoundedImageView
        android:id="@+id/item_chat_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:maxHeight="200dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_loading_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sriv_left_bottom_corner_radius="@dimen/chat_bg_corner_radius"
        app:sriv_left_top_corner_radius="@dimen/chat_bg_corner_radius"
        app:sriv_right_bottom_corner_radius="@dimen/chat_bg_corner_radius"
        app:sriv_right_top_corner_radius="@dimen/chat_bg_corner_radius" />

    <RelativeLayout
        android:id="@+id/loading_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_chat_image"
        app:layout_constraintStart_toStartOf="@id/item_chat_image"
        app:layout_constraintEnd_toEndOf="@id/item_chat_image"
        app:layout_constraintBottom_toBottomOf="@id/item_chat_image">

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spin_kit"
            style="@style/SpinKitView.Small.FoldingCube"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            app:SpinKit_Color="@color/colorAccent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/revealable_view"
        style="@style/AppTextAppearance.VerySmall.Grey"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:translationX="80dp"
        app:layout_constraintBottom_toBottomOf="@+id/item_chat_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_chat_image"
        tools:text="12:00 AM" />

    <TextView
        android:id="@+id/item_chat_status"
        style="@style/AppTextAppearance.VerySmall.Grey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/item_chat_image"
        app:layout_constraintTop_toBottomOf="@+id/item_chat_image"
        tools:text="Delivered" />
</androidx.constraintlayout.widget.ConstraintLayout>