<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_gray"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <RelativeLayout
        style="?attr/backgroundTheme"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/bg_bottom_gray"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/user_profile_back"
            style="@style/BackButton" />

        <TextView
            style="@style/TextTitle"
            android:text="DETAILS" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            style="@style/MatchParent"
            android:orientation="vertical">

            <View style="@style/ItemViewSeparate" />

            <LinearLayout
                style="@style/ItemSetting"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/user_profile_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_avatar_gray" />

                <TextView
                    android:id="@+id/user_profile_name"
                    style="@style/ItemSettingText"
                    android:text="User name" />

                <ImageView
                    android:id="@+id/user_profile_message"
                    style="?attr/backgroundTheme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:src="@drawable/ic_message_border" />

                <ImageView
                    android:id="@+id/user_profile_voice"
                    style="?attr/backgroundTheme"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:src="@drawable/ic_chat_audio" />

                <ImageView
                    android:id="@+id/user_profile_video"
                    style="?attr/backgroundTheme"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:padding="5dp"
                    android:src="@drawable/ic_chat_video" />
            </LinearLayout>

            <View style="@style/ItemViewSeparate" />

            <LinearLayout style="@style/ItemSetting">

                <ImageView
                    style="?attr/backgroundTheme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_conversation_notification" />

                <TextView
                    style="@style/ItemSettingText"
                    android:text="Notifications" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/user_profile_notification"
                    style="@style/ItemSettingIconRight.Toggle" />
            </LinearLayout>

            <View style="@style/ItemSettingSeparate" />

            <LinearLayout
                android:id="@+id/profile_nickname"
                style="@style/ItemSetting">

                <ImageView
                    style="?attr/backgroundTheme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_conversation_nickname" />

                <TextView
                    style="@style/ItemSettingText"
                    android:text="Nickname" />

                <ImageView style="@style/ItemSettingIconRight" />
            </LinearLayout>

            <View style="@style/ItemSettingSeparate" />

            <LinearLayout style="@style/ItemSetting">

                <ImageView
                    style="?attr/backgroundTheme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_conversation_mask_message" />

                <TextView
                    style="@style/ItemSettingText"
                    android:text="Mask Incoming Messages" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/user_profile_mask"
                    style="@style/ItemSettingIconRight.Toggle" />
            </LinearLayout>

            <View style="@style/ItemSettingSeparate" />

            <LinearLayout style="@style/ItemSetting">

                <ImageView
                    style="?attr/backgroundTheme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_conversation_mask_image" />

                <TextView
                    style="@style/ItemSettingText"
                    android:text="Puzzle Incoming Pictures" />


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/user_profile_puzzle"
                    style="@style/ItemSettingIconRight.Toggle" />
            </LinearLayout>

            <View style="@style/ItemSettingSeparate" />

            <LinearLayout style="@style/ItemSetting">

                <ImageView
                    style="?attr/backgroundTheme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_color_lens" />

                <TextView
                    android:id="@+id/group_profile_color"
                    style="@style/ItemSettingText"
                    android:text="Colors" />

                <ImageView style="@style/ItemSettingIconRight" />
            </LinearLayout>

            <View style="@style/ItemSettingSeparate" />

            <LinearLayout
                android:id="@+id/profile_background"
                style="@style/ItemSetting">

                <ImageView
                    style="?attr/backgroundTheme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_chat_image_selected" />

                <TextView
                    style="@style/ItemSettingText"
                    android:text="@string/conversation_detail_background" />

                <ImageView style="@style/ItemSettingIconRight" />
            </LinearLayout>

            <View style="@style/ItemSettingSeparate" />

            <LinearLayout
                android:id="@+id/profile_gallery"
                style="@style/ItemSetting">

                <ImageView
                    style="?attr/backgroundTheme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_chat_image_selected" />

                <TextView
                    style="@style/ItemSettingText"
                    android:text="@string/conversation_detail_media" />

                <ImageView style="@style/ItemSettingIconRight" />
            </LinearLayout>

            <View style="@style/ItemViewSeparate" />

            <LinearLayout style="@style/ItemSetting">

                <ImageView
                    style="?attr/backgroundTheme"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_block" />

                <TextView
                    style="@style/ItemSettingText"
                    android:text="Block" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/user_profile_block"
                    style="@style/ItemSettingIconRight.Toggle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View style="@style/ViewSeparate" />

</LinearLayout>
