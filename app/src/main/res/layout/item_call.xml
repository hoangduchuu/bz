<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_contact_item"
    android:layout_marginLeft="@dimen/default_padding"
    style="@style/ListItemContainer"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/call_item_profile"
        android:layout_width="@dimen/user_profile_icon_width"
        android:layout_height="@dimen/user_profile_icon_height"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_avatar_gray" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_padding"
        android:layout_weight="1">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    style="@style/AppTextAppearance"
                    android:id="@+id/call_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="John Doe" />

                <TextView
                    android:id="@+id/call_item_info"
                    style="@style/AppTextAppearance.Small.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    tools:text="03-18-2017-11:54" />

            </LinearLayout>

            <ImageView
                android:id="@+id/item_call_voice"
                android:layout_centerVertical="true"
                style="@style/list_item_btn"
                android:src="@drawable/start_voice_call" />

            <ImageView
                android:id="@+id/item_call_video"
                style="@style/list_item_btn"
                android:src="@drawable/start_video_call" />

            <ImageView
                android:id="@+id/item_call_delete"
                android:layout_centerVertical="true"
                style="@style/list_item_btn"
                android:src="@drawable/delete" />
        </LinearLayout>
        <View
            style="@style/horizontal_divider"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>


</LinearLayout>
