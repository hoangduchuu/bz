<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemChat"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/item_chat_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginRight="10dp"
        android:background="@null" />

    <ImageView
        android:id="@+id/item_chat_user_profile"
        android:layout_width="@dimen/user_profile_icon_chat_width"
        android:layout_height="@dimen/user_profile_icon_chat_height"
        android:layout_gravity="bottom"
        android:src="@drawable/ic_avatar_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/item_chat_margin"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/item_chat_info"
            style="@style/AppTextAppearance.VerySmall.Grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user" />

        <LinearLayout
            android:id="@+id/item_chat_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_chat_user_profile"
            android:background="@drawable/background_chat_left"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:src="@android:drawable/ic_media_play" />

            <ImageView
                android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:src="@android:drawable/ic_media_pause"
                android:visibility="gone" />

            <LinearLayout android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <SeekBar
                    android:id="@+id/media_seekbar"
                    android:thumbTint="@color/color_primary"
                    android:layout_width="90dp"
                    android:progressTint="@color/color_primary"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start" />

                <TextView
                    android:id="@+id/playback_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="00:00"
                    android:inputType="text"
                    android:textColor="@color/color_primary"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/item_chat_status"
            style="@style/AppTextAppearance.VerySmall.Grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Sent" />
    </LinearLayout>

</LinearLayout>