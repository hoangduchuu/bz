<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:fitsSystemWindows="true"
    tools:context="com.ping.android.activity.com.ping.android.presentation.view.activity.ChangePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ib_back"
            style="@style/BackButton" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_logo" />

        <LinearLayout
            style="@style/InputLayoutStyle"
            android:layout_marginTop="100dp">

            <EditText
                android:id="@+id/txt_password"
                style="@style/InputTextStyle"
                android:hint="Current Password"
                android:inputType="textPassword" />

            <View style="@style/InputUnderLineStyle" />

            <EditText
                android:id="@+id/txt_new_password"
                style="@style/InputTextStyle"
                android:hint="New Password"
                android:inputType="textPassword" />

            <View style="@style/InputUnderLineStyle" />

            <EditText
                android:id="@+id/txt_confirm_password"
                style="@style/InputTextStyle"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

            <View style="@style/InputUnderLineStyle" />


            <RelativeLayout
                android:id="@+id/password_change"
                style="@style/NextButtonLayout"
                android:layout_marginTop="15dp">

                <TextView
                    style="@style/NextButtonText"
                    android:text="CHANGE" />

                <ImageView
                    style="@style/NextButtonImage"
                    android:src="@drawable/ic_arrow_right" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/notify_network_other" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/ProgressStyle" />

</android.support.design.widget.CoordinatorLayout>