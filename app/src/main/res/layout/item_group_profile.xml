<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ListItemContainer"
    android:layout_marginLeft="@dimen/default_padding"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/group_profile_item_image"
        android:layout_width="@dimen/user_profile_icon_width"
        android:layout_height="@dimen/user_profile_icon_height"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_avatar_gray" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_padding"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/group_profile_item_name"
            style="@style/AppTextAppearance"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"

            tools:text="First last Name" />
        <TextView
            android:id="@+id/group_profile_item_username"
            style="@style/AppTextAppearance"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="0dp"
            android:layout_centerVertical="true"

            tools:text="Username" />

        <View
            style="@style/horizontal_divider"
            android:layout_alignParentBottom="true" />
    </LinearLayout>
</LinearLayout>
