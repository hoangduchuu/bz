<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_enabled="true">
        <shape android:shape="rectangle" android:visible="true">
            <solid android:color="#5856D6" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_checked="false" android:state_enabled="false">
        <shape android:shape="rectangle" android:visible="true">
            <stroke android:color="#666666" android:width="1dp"/>
            <size android:width="70dp" android:height="24dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>